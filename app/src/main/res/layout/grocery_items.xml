<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/min_quantity"
                android:textSize="8sp"
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:text="Min 1Kg"
                android:layout_gravity="right" />

            <ImageView
                android:id="@+id/image"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/tomoto"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/grocery_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Radish"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:gravity="start"
                    />
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="Fresh ooty carrot"
                    android:textColor="#000"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="Rs 120/KG"
                    android:textColor="#000"
                    android:gravity="start"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:gravity="end">

                    <ImageButton
                        android:id="@+id/decrement"
                        android:layout_width="28dp"
                        android:layout_height="35dp"
                        android:src="@drawable/black_minus"
                        />

                    <TextView
                        android:id="@+id/actual_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:text="1"
                        />

                    <ImageButton
                        android:id="@+id/increment"
                        android:layout_width="28dp"
                        android:layout_height="35dp"
                        android:src="@drawable/box_add"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>